<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
        
   <hibernate-configuration>
   
   <session-factory>
   
   <!-- JDBC DB connection settings for our project -->
   <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
   <property name="connection.url">jdbc:mysql://localhost:3306/simpliLearnOct</property>
   <property name="connection.username">root</property>
   <property name="connection.password"></property>
   
   <!-- Select our SQL dialect -->
   <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
   
   <!-- Set the current session context -->
   <property name="current_session_context_class">thread</property>
   
   <!-- Print the SQL to console -->
   <property name="show_sql">true</property>
   
   <!-- JDBC connection pool settings to be used -->
   <property name="connection.pool_size">1</property>
   
   <!-- Update the schema on project startup, if necessary -->
   <property name="hbm2ddl.auto">update</property>
   
   
   </session-factory>
   
   
   </hibernate-configuration>     